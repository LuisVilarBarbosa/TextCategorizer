FROM continuumio/miniconda3:4.6.14

WORKDIR /usr/src/app

COPY text_categorizer/environment.yml /usr/src/app/text_categorizer/environment.yml

RUN apt-get update --fix-missing && \
    apt-get install -y g++ libhunspell-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
RUN conda env create --file /usr/src/app/text_categorizer/environment.yml

ENTRYPOINT ["/bin/bash", "-c"]

CMD ["source activate text-categorizer && exec python3 -m text_categorizer --prediction_server \"$CONFIG_FILE\" \"$PORT\""]
